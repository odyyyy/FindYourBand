<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.vacancies.BandPageFragment">


        <RelativeLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/avatarImageView"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/welcomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"

                android:layout_marginStart="16dp"
                android:text="Никнейм"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/arrowBackComponent"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/groupNameAndImageLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileLayout"
            android:gravity="center_horizontal"

            android:orientation="vertical">


            <ImageView
                android:id="@+id/bandImageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/bandnameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatarImageView"
                android:layout_centerHorizontal="true"
                android:text="Название группы"
                android:textSize="30sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/bandCityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/groupNameAndImageLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="12dp"

            android:text="Город"
            android:textColor="#373737"
            android:textSize="24sp" />

        <Button
            android:id="@+id/sendRequestVacancyPageBtn"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bandCityTextView"
            android:layout_centerHorizontal="true"
            android:text="Отправить заявку" />

        <LinearLayout
            android:id="@+id/genreVacancyPageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wantToFindLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"


            android:orientation="horizontal"
            android:padding="15dp">

<!--            <TextView-->
<!--                style="@style/genreTextViewStyle"-->

<!--                android:text="Prog. Rock" />-->

<!--            <TextView-->
<!--                style="@style/genreTextViewStyle"-->
<!--                android:text="Blues" />-->

<!--            <TextView-->
<!--                style="@style/genreTextViewStyle"-->
<!--                android:text="Metal" />-->


        </LinearLayout>

        <LinearLayout
            android:id="@+id/wantToFindLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/sendRequestVacancyPageBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/genreVacancyPageLayout"
                android:text="В поиске:"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/wantFindInstrumentImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_guitar" />

        </LinearLayout>


        <!--        <TextView-->
        <!--            android:id="@+id/groupMembersTextView"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@+id/"-->

        <LinearLayout
            android:id="@+id/groupMembersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genreVacancyPageLayout"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/groupMemberSecond"
                style="@style/groupMembersLayoutStyle">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/logo" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"

                    android:text="Лидер группы"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_star_groupleader" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_instrument" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupMemberThird"
                style="@style/groupMembersLayoutStyle">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/logo" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"

                    android:text="Участник группы 1"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_instrument" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupMemberOneLead"
                style="@style/groupMembersLayoutStyle">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/logo" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"

                    android:text="Участник группы 2"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_instrument" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/DescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/groupMembersLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="О нас"

            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/musicianDescriptionValueLayout"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/DescriptionTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/about_user_shape"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/aboutMeContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem"
                android:textSize="16sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/musicExampleMusicianVacancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/musicianDescriptionValueLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Примеры работ"

            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/musicExamplesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/musicExampleMusicianVacancy"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout

                android:id="@+id/musicExampleOne"
                style="@style/musicExampleLayoutStyle">

                <TextView
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"

                    android:text="Название композиции"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_play_music" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/musicExampleSecond"
                style="@style/musicExampleLayoutStyle">

                <TextView
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"

                    android:text="Название композиции"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_play_music" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/musicExampleThird"
                style="@style/musicExampleLayoutStyle">

                <TextView
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"

                    android:text="Название композиции"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_play_music" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/MusicianContactsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/musicExamplesLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Контакты"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/musicianContactsValueLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/MusicianContactsTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/contactPhoneLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/musicianPhoneNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="+71234567890"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contactEmailLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_email" />

                <TextView

                    android:id="@+id/musicianEmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="musician@email.ru"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contactSocialMediaLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_socialmedia" />

                <TextView
                    android:id="@+id/musicianSocialMediaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="musicianSocialMedia"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>