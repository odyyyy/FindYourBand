<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/memberCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:layout_margin="15dp"

        app:cardBackgroundColor="@color/card_color">

        <LinearLayout
            android:background="@color/mainColor"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/groupMemberLayout"
            >

            <ImageView
                android:id="@+id/memberImage"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"/>




            <TextView
                android:id="@+id/memberNickname"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/darker_white"
                android:text="Никнейм"/>

            <ImageView
                android:id="@+id/bandLeaderImageView"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="1dp"
                android:tint="@color/darker_white"
                android:src="@drawable/ic_star_groupleader" />

            <LinearLayout
                android:layout_gravity="center"
                android:id="@+id/memberCardInstrumentsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

<!--            <ImageView-->
<!--                android:layout_marginStart="20dp"-->
<!--                android:src="@drawable/ic_instrument"-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"/>-->
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>