<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_my_requests"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/avatar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/avatar_image"



            android:layout_height="72dp"
            android:layout_width="72dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/nickname_text"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"

            android:singleLine="true"
            android:text="Никнейм"
            android:textColor="#FF000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_arrow_right" />
    </FrameLayout>

    <TextView
        android:id="@+id/text_status_requests"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="35.65dp"
        android:layout_marginBottom="-5.35dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Статус заявок"
        android:textColor="#FF000000"
        android:textSize="28dp" />

    <FrameLayout
        android:background="@drawable/music_example_shape"
        android:id="@+id/container_chat_field"
        android:layout_width="332dp"
        android:layout_height="69dp"
        android:layout_marginTop="64dp"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:id="@+id/image_request_status"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end|center"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_clock" />

        <ImageView
            android:id="@+id/image_user_avatar"
            android:layout_width="51.35dp"
            android:layout_height="51.35dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="8.65dp"
            android:layout_gravity="left"
            android:scaleType="centerInside"
            android:src="@drawable/logo"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/text_group_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="left"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Название группы"
            android:textColor="#FF000000"
            android:textSize="15.2dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_chat_field1"
        android:background="@drawable/music_example_shape"
        android:layout_width="332dp"
        android:layout_height="69dp"
        android:layout_marginTop="29dp"
        android:layout_gravity="center_horizontal">



        <ImageView
            android:id="@+id/image_request_status1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end|center"
            android:scaleType="centerCrop"
            android:layout_marginEnd="15dp"
            app:srcCompat="@drawable/ic_deny"
             />

        <ImageView
            android:id="@+id/image_user_avatar1"
            android:layout_width="51.35dp"
            android:layout_height="51.35dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="8.65dp"
            android:layout_gravity="left"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/text_nickname"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="left"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Никнейм"
            android:textColor="#FF000000"
            android:textSize="16sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_chat_field3"
        android:background="@drawable/music_example_shape"
        android:layout_width="332dp"
        android:layout_height="69dp"
        android:layout_marginTop="29dp"
        android:layout_gravity="center_horizontal">



        <ImageView
            android:id="@+id/image_request_status3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end|center"
            android:layout_marginEnd="13dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_accepted" />

        <ImageView
            android:id="@+id/image_user_avatar3"
            android:layout_width="51.35dp"
            android:layout_height="51.35dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="8.65dp"
            android:layout_gravity="left"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/text_nickname2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="left"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Никнейм"
            android:textColor="#FF000000"
            android:textSize="16sp" />
    </FrameLayout>


</LinearLayout>
