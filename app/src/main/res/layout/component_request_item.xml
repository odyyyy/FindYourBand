<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_margin="15dp"
        android:id="@+id/container_chat_field1"
        android:background="@drawable/music_example_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">



        <ImageView
            android:id="@+id/requestStatusImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center"
            android:scaleType="centerCrop"
            android:layout_marginEnd="15dp"
            app:srcCompat="@drawable/ic_deny"
            />

        <ImageView
            android:id="@+id/requestStatusImageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center"
            android:scaleType="centerCrop"
            android:layout_marginEnd="70dp"
            app:srcCompat="@drawable/ic_deny"
            />

        <ImageView
            android:id="@+id/request_to_image_user_avatar"
            android:layout_width="51.35dp"
            android:layout_height="51.35dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="8.65dp"
            android:layout_gravity="left"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/text_nickname"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="left"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Никнейм"
            android:textColor="#FF000000"
            android:textSize="16sp" />
    </FrameLayout>

</LinearLayout>


