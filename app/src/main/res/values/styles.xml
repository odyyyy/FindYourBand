<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CustomDropDown" >
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">40dp</item>

    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:padding">16dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">40dp</item>

    </style>


    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="ButtonStyle" >
        <item name="android:backgroundTint">#2D2D2D</item>
        <item name="android:padding">@dimen/btn_padding</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonSettingsStyle" >

        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:padding">@dimen/btn_padding</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BadgeStyle">
        <item name="android:background">@drawable/badge_shape</item>
        <item name="borderRound">12dp</item>
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">105dp</item>
    </style>

    <style name="genreTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/genre_shape</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:padding">5dp</item>

    </style>

    <style name="musicExampleLayoutStyle">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/music_example_shape</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="groupMembersLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/music_example_shape</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">14dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="chipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="chipBackgroundColor">@color/chip_selector</item>

    </style>

</resources>